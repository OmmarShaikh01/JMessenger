<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashScreenActivity">

    <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            app:srcCompat="@drawable/jabmessenger_appsplash_icon"
            android:id="@+id/splashscreenImageview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="86dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/splashScreen_Icon"
            />

    <TextView
            android:text="Made With ❤\nBy Ommar Shaikh"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/splashscreenTextview"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp"
            app:layout_constraintTop_toBottomOf="@+id/splashscreenImageview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="115dp"
            android:layout_marginEnd="116dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>