<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JMessenger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="colorAccent">@color/secondaryDarkColor</item>
        <item name="android:colorControlNormal">@color/secondaryDarkColor</item>
        <item name="android:colorControlActivated">@color/secondaryDarkColor</item>
        <item name="android:colorControlHighlight">@color/secondaryDarkColor</item>

        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
        <item name="android:colorBackground">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>

        <item name="android:toolbarStyle">@style/JPrimaryToolBar</item>
        <item name="android:popupMenuStyle">@style/JToolBarMenu</item>
        <item name="android:editTextStyle">@style/JTextEdit</item>
        <item name="android:tabWidgetStyle">@style/JPrimaryTabBar</item>
    </style>

</resources>