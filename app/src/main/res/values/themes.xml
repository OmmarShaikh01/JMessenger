<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JMessenger" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/primaryDarkColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorControlNormal">@color/primaryDarkColor</item>
        <item name="colorControlActivated">@color/secondaryColor</item>
        <item name="colorControlHighlight">@color/secondaryColor</item>

        <!-- App component Style Declarations-->
        <item name="android:colorBackground">@color/primaryDarkColor</item>
        <item name="android:colorControlNormal">@color/secondaryColor</item>
        <item name="android:colorControlHighlight">@color/secondaryColor</item>
        <item name="android:colorControlActivated">@color/secondaryColor</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>

        <!-- App widget Style Declarations-->
        <item name="toolbarStyle">@style/JPrimaryToolBar</item>
        <item name="tabStyle">@style/JPrimaryTabBar</item>
        <item name="textInputStyle">@style/JTextEdit</item>
    </style>

</resources>
